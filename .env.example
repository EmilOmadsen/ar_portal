# Database Configuration
DATABASE_URL=sqlite:///./ar_portal.db

# JWT Security Settings
# IMPORTANT: Generate a secure random key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Magic Link Portal Configuration
MAGIC_LINK_SECRET=CHANGE_ME_MAGIC_LINK_SECRET_KEY
APP_BASE_URL=http://localhost:8000

# Label Authentication
LABEL_PASSWORD=your_secure_label_password_here

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@sundaylabel.com
LABEL_EMAIL=ar@sundaylabel.com

# Cookie Security (set to true in production with HTTPS)
SECURE_COOKIES=false

# Microsoft Azure AD Configuration
AZURE_CLIENT_ID=your_client_id_here
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback
AZURE_SCOPE=User.Read

# Chartmetric API Configuration
CHARTMETRIC_API_KEY=your_chartmetric_api_key_here
CHARTMETRIC_REFRESH_TOKEN=your_chartmetric_refresh_token_here
CHARTMETRIC_BASE_URL=https://api.chartmetric.com/api
